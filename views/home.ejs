<html>
    <head>
        <title>
            Habbit tracker
        </title>
        <!--adding bootstrap to make look of button good -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <!--adding font awesome cdn-->
    	<meta name="viewport" content="width=device-width initial-scale=1.0">
	    <script src="https://kit.fontawesome.com/b5d0e4ac97.js" crossorigin="anonymous"></script>
	    <script src="https://kit.fontawesome.com/b5d0e4ac97.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
       <header><h1>Habbit Tracker</h1></header>
       <!--dividing all body into three part left mid right-->
       <div id="mainContainer" class="border">
            <div id="left" class="border">
               <form action="/addtoHabit" method="post" class="addHabbitForm">
                   <input type="text" name="addHabbit" class="addHabbit form-control" 
                   placeholder=" enter your habit to add " autocomplete="off" required>
                <button type="submit" class="btn btn-success" id="submitbtn">ADD IT </button>
               </form>
               <ul class="">
                  <% for(let i of habbitList) {%>
                   <li><%= i._id %></li>
                   <li>
                       <div>
                           
                       </div>
                   </li>
                <%}%>
               </ul>

           </div>
           <div id="right" class="border">
               <%= locals.habbit %>
               <% if(locals.complete=='true') {%>
               <%- include('complete.ejs'); %>
               <% }%>
           </div>

       </div>
       <!--adding bootstrap jquery-->
       <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    </body>
</html>