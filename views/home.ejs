<html>
    <head>
        <title>
            Habbit tracker
        </title>
        <!--adding bootstrap to make look of button good -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <!--adding font awesome cdn-->
    	<meta name="viewport" content="width=device-width initial-scale=1.0">
	    <script src="https://kit.fontawesome.com/b5d0e4ac97.js" crossorigin="anonymous"></script>
	    <script src="https://kit.fontawesome.com/b5d0e4ac97.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
       <header><h1>Habbit Tracker</h1></header>
       <!--dividing all body into three part left mid right-->
       <div id="mainContainer" class="border">
            <div id="left" class="border">
                <!-- add to habbit form it is only for name after it we go for more details-->
               <form action="/addtoHabit" method="post" class="addHabbitForm">
                   <input type="text" name="addHabbit" class="addHabbit form-control" 
                   placeholder=" enter your habit to add " autocomplete="off" required>
                <button type="submit" class="btn btn-success" id="submitbtn">ADD IT </button>
               </form>
               <table class="table table-striped">
                <thead class=" thead-dark">   
                    <tr scope="row">
                       <th scope="col">Habbit-Name</th>
                       <th scope="col">Category</th>
                       <th scope="col">Message</th>
                       <th scope="col">View</th>
                   </tr>
                </thead>
                <tbody>                   
                    <% for(let obj of habbitList){%>
                        <tr scope="row">
                            <th scope="col" class="normalText"><%= obj['habbit']%></th>
                            <th scope="col" class="normalText"><%= obj['category']%></th>
                            <th scope="col" class="normalText">
                                <button class="btn btn-danger" onclick="window.location='/deleteMe?id=<%= obj._id %>'">Delete</button>
                            </th>
                            <th scope="col" class="normalText">
                            <button class="btn btn-primary" onclick="window.location='/viewMe?id=<%= obj._id %>'">View It</button>
                        </th>
                        </tr>
                <% } %>
                </tbody>
              
               </table>

           </div>
           <div id="right" class="border">
               <!-- here we always check value of complete which comes with controller by default but when we go after filling above
            form we change it to true-->
               <% if(locals.complete==true) {%>
                <header id="header"><%= locals.habbit %></header>
                <%- include('complete.ejs'); %>
               <% }%>
           </div>

       </div>
       <!--adding bootstrap jquery-->
       <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    </body>
</html>